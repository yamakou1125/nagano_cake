<div class="container">
  <div class="bg-light w-25 mb-5 text-center">
    <h4>商品新規登録</h4>
  </div>


  <%= form_with model: @item, url: admin_items_path, local: true do |f| %>

  <div class="row mb-3">
    <%= f.label :商品画像, class: "col-md-5 text-center col-form-label" %>
    <%= f.attachment_field :image, class: " col-md-6" %>
  </div>

  <div class="row mb-3">
    <%= f.label :商品名, class: "col-md-5 text-center col-form-label" %>
    <%= f.text_field :name, class: "col-md-3 ml-3 form-control" %>
  </div>

  <div class="row mb-3">
    <%= f.label :商品説明, class: "col-md-5 text-center col-form-label" %>
    <%= f.text_area :introduction, class: "col-md-3 ml-3 form-control" %>
  </div>

  <div class="row mb-3">
    <%= f.label :ジャンル, class: "col-md-5 text-center col-form-label" %>
　  <%= f.collection_select(:genre_id, Genre.all, :id, :name) %>
　</div>

　<div class="row mb-3">
    <%= f.label :税抜価格, class: "col-md-5 text-center col-form-label" %>
    <%= f.text_field :price, class: "ml-3" %>円
  </div>

  <div class="row mb-5">
    <%= f.label :販売ステータス, class: "col-md-5 text-center" %>
    <%= f.radio_button :is_active, true, class: "form-check mt-2 ml-3" %>
    <%= f.label :is_active, '販売中', value: true, class: "form-check-label ml-1" %>
    <%= f.radio_button :is_active, false, class: "form-check mt-2 ml-1" %>
    <%= f.label :is_active, '販売停止中', value: false, class: "form-check-label ml-1" %>
  </div>

  <div class="row">
    <div class="col-md-5"></div>
    <%= f.submit '新規登録', class: 'btn btn-success ml-3' %>
  </div>
  <% end %>

</div>