<div class="container mt-5">
    <div class="bg-light text-center pt-1 w-25">
      <h4>会員一覧</h4>
    </div>

<table class="table table-hover table-inverse mt-5">
        <thead class="bg-light">
          <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
          </tr>
        </thead>
      <% @customers.each do |customer| %>
      <tbody>
        <tr>
          <td>
           <%= customer.id %>
          </td>
          <td>
           <%= link_to admin_customer_path(customer.id), method: :get do %>
           <%= customer.last_name %> <%= customer.first_name %>
           <% end %>
          </td>
          <td>
           <%= customer.email %>
          </td>
          <td>
            <% if customer.is_active == true %>
            有効
            <% else %>
            退会
            <% end %>
          </td>
        </tr>
      </tbody>
      <% end %>
      </table>
</div>