<h4><%= @customer.last_name %> <%= @customer.first_name %>の会員情報編集</h4>
<h4>会員ID</h4>
<%= @customer.id %>
<%= form_with model:@customer, url: admin_customer_path, local: true do |f| %>


<h4>氏名</h4>
  <%= f.text_field :last_name, class: 'form-control' %>
  <%= f.text_field :first_name, class: 'form-control' %>
  
<h4>フリガナ</h4>
<%= f.text_field :last_name_kana, class: 'form-control' %>
<%= f.text_field :first_name_kana, class: 'form-control' %>

<h4>郵便番号</h4>
<%= f.text_field :postal_code, class: 'form-control' %>

<h4>住所</h4>
<%= f.text_field :address, class: 'form-control' %>

<h4>電話番号</h4>
<%= f.text_field :telephone_number, class: 'form-control' %>

<h4>メールアドレス</h4>
<%= f.text_field :email, class: 'form-control' %>
  
<h4>会員ステータス</h4>
<%= f.radio_button :is_active, true %>
  <%= f.label :is_active, '有効', value: true %>
  <%= f.radio_button :is_active, false %>
  <%= f.label :is_active, '退会', value: false %>

<div class='form-group'>
  <%= f.submit '変更を保存', class: 'btn btn-success' %>
</div>
<% end %>