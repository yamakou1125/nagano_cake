<div class="container">
  <div class="bg-light w-25 mb-5 text-center">
    <h5>ジャンル編集</h5>
  </div>

<% if @genre.errors.any? %>
  <%= @genre.errors.count %>件のエラーが発生しました
  <% @genre.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model:@genre, url: admin_genre_path, local: true do |f| %>
<div class='row'>
  <%= f.label :ジャンル名, class: "col-md-2 col-form-label text-center" %>
  <%= f.text_field :name, class: "col-md-3 form-control" %>
  <div class="col-md-1 ml-3">
    <%= f.submit '変更を保存', class: "btn btn-success" %>
  </div>
</div>
<% end %>

</div>