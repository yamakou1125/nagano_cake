<div class="container">
  <div class="row">
    <div class="col-md-2 text-center">
      <h4 class="bg-light">注文履歴一覧</h4>
    </div>
  </div>

  <table class="table table-hover table-inverse table-bordered mt-5 mb-5 col-md-12">
    <thead class="bg-light">
      <tr>
        <th class="col-md-auto">注文日</th>
        <th class="col-md-auto">配送先</th>
        <th class="col-md-auto">注文商品</th>
        <th class="col-md-auto">支払金額</th>
        <th class="col-md-auto">ステータス</th>
        <th class="col-md-auto">注文詳細</th>
      </tr>
    </thead>

    <% @orders.each do |order| %>
    <tbody>
      <tr>
        <td>
          <%= l order.created_at %>
        </td>
        <td>
          〒<%= order.postal_code %><br>
          <%= order.address %><br>
          <%= order.name %>
        </td>
        <td>
          <% order.order_details.each do |order_detail| %>
          <%= order_detail.item.name %> <br>
          <% end %>
        </td>
        <td>
          <%= order.billing_amount.to_i + order.postage.to_i %>円
        </td>
        <td>
          <%= order.status %>
        </td>
        <td>
          <%= link_to "表示する", order_path(order.id), class: "btn btn-primary" %>
        </td>
      </tr>
    </tbody>
    <% end %>
  </table>

</div>