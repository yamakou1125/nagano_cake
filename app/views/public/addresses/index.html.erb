<div class="container mb-5">
  <div class="row">
    <div class="col-md-2 bg-light text-center">
      <h5>配送先登録/一覧</h5>
    </div>
  </div>
</div>

<div class="container">
<%= form_with model: @address, url: addresses_path, local: true do |f| %>

  <div class="row mb-3">
    <%= f.label :郵便番号（ハイフンなし）, class: "col-md-3 text-left col-form-label" %>
    <%= f.text_field :postal_code, class: " col-md-3 ml-3 form-control" %>
  </div>

  <div class="row mb-3">
    <%= f.label :住所, class: "col-md-3 text-left col-form-label" %>
    <%= f.text_field :address, class: "col-md-6 ml-3 form-control" %>
  </div>

  <div class="row mb-3">
    <%= f.label :宛名, class: "col-md-3 text-left col-form-label" %>
    <%= f.text_field :name, class: "col-md-3 ml-3 form-control" %>
    <div class="col-md-3"></div>
    <%= f.submit '新規登録', class: 'btn btn-success ml-5' %>
  </div>
  <% end %>

</div>

<div class="container">
<table class="table table-hover table-inverse table-bordered mt-5 col-md-12">
        <thead class="bg-light">
          <tr>
          <th class="col-md-1">郵便番号</th>
          <th class="col-md-6">住所</th>
          <th class="col-md-2">宛名</th>
          <th class=col-md-3></th>
          </tr>
        </thead>
      <% @addresses.each do |address| %>
      <tbody>
        <tr>
          <td>
           <%= address.postal_code %>
          </td>
          <td>
           <%= address.address %>
          </td>
          <td>
           <%= address.name %>
          </td>
          <td>
            <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success ml-4" %>
            <%= link_to "削除する", address_path(address.id), method: :delete, class: "btn btn-danger ml-4" %>
          </td>
        </tr>
      </tbody>
      <% end %>
      </table>
  </div>
</div>


