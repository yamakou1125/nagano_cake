<div class="container mb-5">
  <div class="row">
    <div class="col-md-2 bg-light text-center pt-2">
      <h5>配送先編集</h5>
    </div>
  </div>
</div>

<% if @address.errors.any? %>
  <%= @address.errors.count %>件のエラーが発生しました
  <% @address.errors.full_messages.each do |message| %>
    <%= message %><br>
  <% end %>
<% end %>

<div class="container">
<%= form_with model: @address, url: address_path, local: true do |f| %>

  <div class="row mb-3">
    <%= f.label :郵便番号（ハイフンなし）, class: "col-md-3 text-left col-form-label" %>
    <%= f.text_field :postal_code, class: " col-md-3 ml-3 form-control" %>
  </div>

  <div class="row mb-3">
    <%= f.label :住所, class: "col-md-3 text-left col-form-label" %>
    <%= f.text_field :address, class: "col-md-6 ml-3 form-control" %>
  </div>

  <div class="row mb-3">
    <%= f.label :宛名, class: "col-md-3 text-left col-form-label" %>
    <%= f.text_field :name, class: "col-md-3 ml-3 form-control" %>
    <div class="col-md-3"></div>
    <%= f.submit '変更内容を保存', class: 'btn btn-success ml-5' %>
  </div>
  <% end %>
</div>
